<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="/WEB-INF/weatherService.properties"/>
    </bean>
    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory"/>
    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="defaultDestinationName" value="forecast"/>
        <constructor-arg ref="connectionFactory"/>
    </bean>
    <bean id="url"  class="java.lang.String">
        <qualifier value="weatherUrl"/>
        <constructor-arg value="${weatherService.url}"/>
    </bean>
</beans>